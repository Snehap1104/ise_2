pipeline {
    agent any

    environment {
        // Set JAVA_HOME and MAVEN_HOME if needed
        JAVA_HOME = "C:\\Program Files\\Java\\jdk-21"
        PATH = "${env.JAVA_HOME}\\bin;C:\\apache-maven-3.9.2\\bin;${env.PATH}"
        
        // Tomcat details
        TOMCAT_USER = 'admin'
        TOMCAT_PASSWORD = 'admin123'
        TOMCAT_URL = 'http://localhost:8080/manager/text'
        WAR_NAME = 'EventManagementSystem.war'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Snehap1104/ise_2.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package -U'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    // Deploy WAR to Tomcat manager
                    def warPath = "target\\${env.WAR_NAME}"
                    bat """curl --upload-file ${warPath} --user ${env.TOMCAT_USER}:${env.TOMCAT_PASSWORD} "${env.TOMCAT_URL}/deploy?path=/EventManagementSystem&update=true" """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Deployment Failed!'
        }
    }
}
